{
  "name": "lestido-api",
  "scripts": {
    "build": "rimraf rmdir ./dist && tsc && copyfiles ./src/resolvers/**/*.graphql ./dist/typeDefs/ -f ",
    "dev": "tsc-watch --onSuccess \"node dist/app.js\"",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "stage": "env-cmd -f ./.env.stagging npm run dev",
    "deploy": "npm run build && git add . && git commit -m 'deploy' && git push"
  },
  "dependencies": {
    "apollo-server": "^2.23.0",
    "apollo-server-express": "^2.23.0",
    "aws-sdk": "^2.880.0",
    "axios": "^0.21.0",
    "bcryptjs": "2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-tools": "^6.0.12",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.32",
    "mysql": "^2.18.1",
    "nanoid": "^3.1.20",
    "node-thumbnail": "^0.15.0",
    "nodemailer": "^6.4.16",
    "reflect-metadata": "^0.1.13",
    "slug": "^3.3.0",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/file-saver": "^2.0.1",
    "@types/graphql-upload": "^8.0.5",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^14.0.20",
    "@types/request": "^2.48.5",
    "@types/sanitize-html": "^1.27.2",
    "apollo-boost": "^0.4.9",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "nodemon": "2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.9",
    "typeorm": "^0.2.32",
    "typeorm-global-scopes": "^0.2.3",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^4.2.4"
  }
}
