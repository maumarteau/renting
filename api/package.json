{
	"name": "lestido-api",
	"scripts": {
		"build": "rimraf ./dist && tsc && shx mkdir -p ./dist/typeDefs && shx cp -f ./src/resolvers/*.graphql ./dist/typeDefs/ && shx cp -f ./src/resolvers/**/*.graphql ./dist/typeDefs/ && shx cp package.production.json dist/package.json && shx cp .env.production dist/.env",
		"devOLD": "tsc-watch --onSuccess \"node dist/index.js\"",
		"seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
		"seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
		"dev:stage": "npx @google-cloud/functions-framework --target=api",
		"dev": "cd dist && env-cmd -f ../.env.production npx functions-framework --target=api --signature-type=http --port=3000",
		"deploy": "node deploy.js"
	},
	"resolutions": {
		"@types/express": "4.17.14"
	},
	"dependencies": {
		"@apollographql/graphql-upload-8-fork": "^8.1.3",
		"@google-cloud/functions-framework": "^3.4.5",
		"@graphql-tools/load-files": "^6.5.1",
		"@graphql-tools/merge": "^8.1.2",
		"@types/cors": "^2.8.19",
		"apollo-server-express": "^2.23.0",
		"aws-sdk": "^2.880.0",
		"axios": "^0.21.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"graphql": "^15.5.0",
		"http": "^0.0.1-security",
		"jsonwebtoken": "^8.5.1",
		"moment": "^2.29.1",
		"moment-timezone": "^0.5.32",
		"mysql": "^2.18.1",
		"nanoid": "^3.1.20",
		"node-thumbnail": "^0.15.0",
		"nodemailer": "^6.4.16",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.2.32",
		"typeorm-global-scopes": "^0.2.3",
		"utf8": "^3.0.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.7",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/node": "^14.0.20",
		"@types/node-fetch": "^2.5.7",
		"@types/request": "^2.48.7",
		"dotenv": "^8.6.0",
		"env-cmd": "^10.1.0",
		"rimraf": "^3.0.2",
		"shx": "^0.3.3",
		"ts-node": "^8.10.2",
		"tsc-watch": "^4.2.9",
		"typeorm-seeding": "^1.6.1",
		"typescript": "^4.2.4"
	}
}
